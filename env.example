# Copy this file to .env and fill in your values

# Twilio WhatsApp API
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# Database (PostgreSQL — auto-filled by Railway/Render/Heroku)
DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/sawa

# Claude AI (optional — exact commands work without it)
ANTHROPIC_API_KEY=sk-ant-...

# Security
SECRET_KEY=change-this-to-a-random-64-char-string
SKIP_TWILIO_VALIDATION=false

# App Settings
ENVIRONMENT=production
DEBUG=false
PORT=8000
